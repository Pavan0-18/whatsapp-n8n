########################################
# n8n WhatsApp-Drive Assistant (MVP)
########################################

# Core
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Public webhook via built-in tunnel
N8N_TUNNEL_SUBDOMAIN=your-unique-subdomain

# Execution
EXECUTIONS_MODE=regular
QUEUE_BULL_REDIS_ENABLE=false

# Timezone
GENERIC_TIMEZONE=UTC

# App
WEBHOOK_URL_SUFFIX=whatsapp

# Vendors
OPENAI_API_KEY=

# Optional: for Docker volume paths inside container
DATA_FOLDER=/home/node/.n8n


